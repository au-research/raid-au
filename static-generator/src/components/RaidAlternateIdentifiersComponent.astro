---
import type { AlternateIdentifier } from "../types";

import {
  Card,
  CardContent,
  CardDescription,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";

interface Props {
  alternateIdentifiers: AlternateIdentifier[];
}

const { alternateIdentifiers } = Astro.props;
---

<Card className="rounded border-l-[#5594d8] border-l-4 bg-white">
  <CardHeader>
    <CardTitle>Alternate Identifiers</CardTitle>
    <CardDescription>
      {alternateIdentifiers?.length} Alternate Identifier(s)
    </CardDescription>
  </CardHeader>
  <CardContent>
    <div class="flex flex-col gap-4">
      {
        alternateIdentifiers?.map((el: AlternateIdentifier, index: number) => {
          return (
            <div class="flex flex-col gap-4 border rounded p-5">
              <div class="mb-2">
                <p class="font-medium leading-none">
                  <span class="text-gray-300 text-sm mr-1">#{index + 1}</span>
                  {el.id}
                </p>
              </div>
              <div class="grid grid-cols-4">
                <div class="space-y-1 text-sm">
                  <h3 class="font-medium leading-none">{el.type}</h3>
                  <p class="text-xs text-muted-foreground">Type</p>
                </div>
              </div>
            </div>
          );
        })
      }
    </div>
  </CardContent>
</Card>
