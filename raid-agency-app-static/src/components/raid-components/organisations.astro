---
import InfoField from "@/components/info-field.astro";
import type { OrganisationDetails } from "@/model/raid";
import OrganisationRoles from "./organisation-roles.astro";

interface Props {
  organisations: OrganisationDetails[];
}

const { organisations } = Astro.props as Props;
---

<section class="py-5">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <h3 class="text-lg font-semibold text-gray-900">Organisations</h3>
    {
      organisations.length === 0 && (
        <h5 class="text-gray-500 text-sm">No Entries</h5>
      )
    }
    <div class="divide-y divide-gray-200">
      {
        organisations?.map((el) => (
          <div class="ml-5 space-y-2 py-4">
            <div class="grid grid-cols-2 gap-5 text-sm">
              <div>
              <InfoField label="Name" value={el?.rorDetails?.name}/>
              </div>
              <div>
              <span class="block font-medium text-gray-900">Organisation ID</span>
              <a href={el.id} target="_blank">
               <img style="display: inline; margin-right: 2px" src="/ror-icon.png" alt="ror-icon" height="24" />
               <span style="text-decoration: underline">{el.id}</span>
               </a>
               </div>
            </div>
            <br/>
            <div class="grid grid-cols-1 gap-5 text-sm">
              <div>
                <span class="block font-medium text-gray-900">Roles</span>
                <OrganisationRoles organisationRoles={el.role} />
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
