---
import type { Description } from "@/generated/raid/models/Description";
import InfoField from "../info-field.astro";
import mapping from "@/mapping.json"
import language from "@/language.json";

interface Props {
  descriptions: Description[];
}

const { descriptions } = Astro.props as Props;
---

<section class="py-5">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <h3 class="text-lg font-semibold text-gray-900">Descriptions</h3>
    {
      descriptions.length === 0 && (
        <h5 class="text-gray-500 text-sm">No Entries</h5>
      )
    }
    <div class="divide-y divide-gray-200">
      {
        descriptions?.map((el) => {
          const descriptionType =
            mapping.find((mapEl) => mapEl.key === el.type.id);
            const languageTitle = language.find(langEl=>langEl.code === el.language?.id)?.name || el.language?.id

          return (
            <div class="ml-5 space-y-2 py-4">
              <div class="grid grid-cols-1 gap-5 text-sm">
                <InfoField label="Description" value={el.text} />
              </div>

              <div class="grid grid-cols-4 gap-5 text-sm">
                <InfoField label="Description Type" value={descriptionType?.value} tooltip={descriptionType?.definition} />
                <InfoField label="Language" value={languageTitle} />
              </div>
            </div>
          );
        })
      }
    </div>
  </div>
</section>
