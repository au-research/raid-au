---
import type { AlternateUrl } from "@/generated/raid";
import InfoField from "../info-field.astro";

interface Props {
  alternateUrls: AlternateUrl[];
}

const { alternateUrls } = Astro.props as Props;
---

<section class="bg-gray-50 py-5">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <h3 class="text-lg font-semibold text-gray-900">Alternate URLs</h3>
    {
      alternateUrls.length === 0 && (
        <h5 class="text-gray-500 text-sm">No Entries</h5>
      )
    }
    <div class="divide-y divide-gray-200">
      {
        alternateUrls?.map((el) => (
          <div class="ml-5 space-y-2 py-4">
            <div class="grid grid-cols-2 gap-5 text-sm">
              <InfoField label="URL" value={el.url} isLink={true} />
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
